<div data-job-id="{{id}}" class="job">
    <div class="job-post">
        <div class="job-title">
            <a target="_blank"
               rel="noreferrer noopener"
               href="{{url}}">{{title}}
                - {{location}}</a>
            <div>
                <button data-job-edit="{{id}}" value="edit" class="btn-link">
                    edit
                </button>
                <button data-job-action="save" data-job-id="{{id}}"
                        class="btn-link">save
                </button>
                <button data-job-action="exclude" data-job-id="{{id}}"
                        class="btn-link">exclude
                </button>
                <button data-job-action="applied" data-job-id="{{id}}"
                        class="btn-link">applied
                </button>
                <button data-job-action="rejected" data-job-id="{{id}}"
                        class="btn-link">rejected
                </button>
                <button data-job-action="ignored" data-job-id="{{id}}"
                        class="btn-link">ignored
                </button>
            </div>
        </div>
        <div>
            <div class="summary">
                <pre>{{summary}}</pre>
            </div>
        </div>
        <div class="post-date">{{postDate}}</div>
    </div>
    <hr>
</div>