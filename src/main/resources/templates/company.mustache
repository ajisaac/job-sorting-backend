<div class="company">


    <div class="company-name-bar">
        <h3>{{name}}</h3>
        <div class="company-controls">
            <div class="labels">
                <span class="interviewing-label label">interviewing</span>
                <span class="excluded-label label">excluded</span>
                <span class="ignored-label label">ignored</span>
            </div>
            <div class="company-controls-buttons">
                <button data-company-action="save" class="btn-link">save</button>
                <button data-company-action="exclude" class="btn-link">exclude</button>
                <button data-company-action="ignored" class="btn-link">ignored</button>
                <button data-company="{{name}}" class="btn-link">blacklist</button>
            </div>
        </div>
    </div>


    <div class="company-content">
        {{#jobs}}
            {{>job}}
        {{/jobs}}
    </div>
</div>